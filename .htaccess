RewriteEngine on
RewriteRule ^info/([a-z]+)/([0-9]+)/?$ info.php?type=$1&id=$2 [NC,L]
RewriteRule ^character/([0-9]+)/?$ character.php?id=$1 [NC,L]
RewriteRule ^people/([0-9]+)/?$ people.php?id=$1 [NC,L]
RewriteRule ^character-staff/([a-z]+)/([0-9]+)/?$ character-staff.php?type=$1&id=$2 [NC,L]
RewriteRule ^cover/(.+)/([0-9]*)/?$ cover.php?user=$1&status=$2 [NC,L]
RewriteRule ^top-anime/?$ top-anime.php [NC,L]